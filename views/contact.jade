extends layout

block content
  #content
    h1= title
    .spacer

    .left
      h4 Asteptam mereu observatiile si comentariile voastre.
      br
      br

      form(method='post', action='/contact')
        label Email
        - if (!everyauth.loggedIn || !user.user_email)
          input.span5(name='email', type='text', required)
        - else
          input.span5(name='email', type='text', required, value='#{user.user_email}')
        label Mesaj
        textarea.span7(name='msg', rows="10", required)
        br
        input.btn.btn-success(type='submit', value='Trimite')

    .right
      .submenu
        a(href='/faq')
          .submenu-item FAQ
        .submenu-item-selected Contact
